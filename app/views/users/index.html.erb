<div class="container">
 <div class="row">
    <div class="col-md-3">
   <%= render 'user', user: @user %>
   <%= render 'books/list', book: @new_book %>
    </div>
  <div class="col-md-8 offset-md-1">
   <h2 class="info">Users</h2>
   <table class="users-table">
    <thead>
     <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %>
     <tr>
      <th><%= image_tag user.get_image, size: "100x100" %></th>
      <th><%= user.name %></th>
      <th><%= link_to "Show", user_path(user.id) %></th>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
