<div class="container">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/user', user: @user %>
   <%= render 'list', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2 class="info">Books</h2>
   <table class="books-table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
     <tr>
      <td><%= image_tag @user.get_image %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
